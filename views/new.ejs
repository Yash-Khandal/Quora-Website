<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a New Post</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        #shape-animation-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Behind the form */
            pointer-events: none; /* Allows clicks to pass through to the form */
            overflow: hidden;
        }

        .shape {
            position: absolute;
            background-color: rgba(255, 255, 255, 0.15); /* Semi-transparent white */
            border-radius: 50%;
            animation: moveShapes 15s linear infinite;
        }

        /* Random initial positions and sizes for the shapes */
        .shape:nth-child(1) { top: 10%; left: 5%; width: 25px; height: 25px; animation-delay: 0s; }
        .shape:nth-child(2) { top: 25%; left: 15%; width: 40px; height: 40px; animation-delay: 2s; }
        .shape:nth-child(3) { top: 40%; left: 30%; width: 15px; height: 15px; animation-delay: 4s; }
        .shape:nth-child(4) { top: 60%; left: 45%; width: 50px; height: 50px; animation-delay: 6s; }
        .shape:nth-child(5) { top: 80%; left: 60%; width: 30px; height: 30px; animation-delay: 8s; }
        .shape:nth-child(6) { top: 35%; left: 75%; width: 70px; height: 70px; animation-delay: 10s; }
        .shape:nth-child(7) { top: 70%; left: 90%; width: 20px; height: 20px; animation-delay: 12s; }
        .shape:nth-child(8) { top: 5%; left: 80%; width: 55px; height: 55px; animation-delay: 14s; }
        .shape:nth-child(9) { top: 95%; left: 50%; width: 35px; height: 35px; animation-delay: 1s; }
        .shape:nth-child(10) { top: 55%; left: 10%; width: 65px; height: 65px; animation-delay: 3s; }
        .shape:nth-child(11) { top: 18%; left: 65%; width: 20px; height: 20px; animation-delay: 5s; }
        .shape:nth-child(12) { top: 78%; left: 25%; width: 45px; height: 45px; animation-delay: 7s; }
        .shape:nth-child(13) { top: 48%; left: 95%; width: 30px; height: 30px; animation-delay: 9s; }
        .shape:nth-child(14) { top: 90%; left: 70%; width: 50px; height: 50px; animation-delay: 11s; }
        .shape:nth-child(15) { top: 12%; left: 40%; width: 25px; height: 25px; animation-delay: 13s; }
        .shape:nth-child(16) { top: 65%; left: 55%; width: 60px; height: 60px; animation-delay: 1s; }
        .shape:nth-child(17) { top: 3%; left: 35%; width: 40px; height: 40px; animation-delay: 3s; }
        .shape:nth-child(18) { top: 88%; left: 85%; width: 20px; height: 20px; animation-delay: 5s; }
        .shape:nth-child(19) { top: 28%; left: 98%; width: 55px; height: 55px; animation-delay: 7s; }
        .shape:nth-child(20) { top: 75%; left: 5%; width: 35px; height: 35px; animation-delay: 9s; }
       
    </style>
</head>
<body>
    <div id="shape-animation-container">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <!-- You can add even more shape divs here -->
    </div>
    <div class="create-form-container">
        <h1>Create a New Post</h1>
        <form method="POST" action="/posts">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" placeholder="Enter your username" required>

            <label for="content">Content:</label>
            <textarea id="content" name="content" placeholder="Write your post here..." required></textarea>

            <button type="submit">Submit</button>
        </form>
    </div>
    <script src="/scripts.js"></script>
</body>
</html>